<?xml version="1.0" encoding="UTF-8"?>
<solver>

  <!-- Domain model configuration -->
  <scanAnnotatedClasses>
    <packageInclude>com.example</packageInclude>
  </scanAnnotatedClasses>

  <!-- Score configuration -->
  <scoreDirectorFactory>
    <easyScoreCalculatorClass>com.example.PlanScore</easyScoreCalculatorClass>
    <initializingScoreTrend>ANY</initializingScoreTrend>
  </scoreDirectorFactory>

  <!-- Local search -->
  <localSearch>
    <unionMoveSelector>
      <changeMoveSelector>
        <entitySelector>
          <entityClass>com.example.Student</entityClass>
        </entitySelector>
      </changeMoveSelector>
      <changeMoveSelector>
        <entitySelector>
          <entityClass>com.example.SourceOrSink</entityClass>
        </entitySelector>
      </changeMoveSelector>
      <changeMoveSelector>
      	<cacheType>PHASE</cacheType>
        <selectionOrder>SHUFFLED</selectionOrder>
      </changeMoveSelector>
      <tailChainSwapMoveSelector>
      	<entitySelector>
          <entityClass>com.example.SourceOrSink</entityClass>
      	</entitySelector>
      	<valueSelector variableName="previous"/>
      </tailChainSwapMoveSelector>
      <subChainChangeMoveSelector>
      	<entityClass>com.example.SourceOrSink</entityClass>
      	<subChainSelector>
          <valueSelector variableName="previous"/>
          <!-- <minimumSubChainSize>2</minimumSubChainSize> -->
          <!-- <maximumSubChainSize>40</maximumSubChainSize> -->
      	</subChainSelector>
      	<valueSelector variableName="previous"/>
      	<selectReversingMoveToo>true</selectReversingMoveToo>
      </subChainChangeMoveSelector>
      <subChainSwapMoveSelector>
	<entityClass>com.example.SourceOrSink</entityClass>
	<subChainSelector>
          <valueSelector variableName="previous"/>
          <!-- <minimumSubChainSize>2</minimumSubChainSize> -->
          <!-- <maximumSubChainSize>40</maximumSubChainSize> -->
	</subChainSelector>
	<secondarySubChainSelector>
          <valueSelector variableName="previous"/>
          <!-- <minimumSubChainSize>2</minimumSubChainSize> -->
          <!-- <maximumSubChainSize>40</maximumSubChainSize> -->
	</secondarySubChainSelector>
	<selectReversingMoveToo>true</selectReversingMoveToo>
      </subChainSwapMoveSelector>
    </unionMoveSelector>
    <acceptor>
      <lateAcceptanceSize>1024</lateAcceptanceSize>
      <!-- <entityTabuSize>8</entityTabuSize> -->
    </acceptor>
    <forager>
      <acceptedCountLimit>16</acceptedCountLimit>
    </forager>
  </localSearch>

  <!-- Optimization algorithms configuration -->
  <termination>
    <bestScoreFeasible>true</bestScoreFeasible>
    <minutesSpentLimit>5</minutesSpentLimit>
    <unimprovedSecondsSpentLimit>15</unimprovedSecondsSpentLimit>
  </termination>

</solver>
