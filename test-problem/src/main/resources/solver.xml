<?xml version="1.0" encoding="UTF-8"?>
<solver>

  <!-- Domain model configuration -->
  <scanAnnotatedClasses>
    <packageInclude>com.example</packageInclude>
  </scanAnnotatedClasses>

  <!-- Score configuration -->
  <scoreDirectorFactory>
    <!-- <easyScoreCalculatorClass>com.example.PlanScore</easyScoreCalculatorClass> -->
    <scoreDrl>busRules.drl</scoreDrl>
  </scoreDirectorFactory>

  <!-- Local search -->
  <localSearch>
    <unionMoveSelector>
      <changeMoveSelector>
        <entitySelector>
          <entityClass>com.example.Student</entityClass>
        </entitySelector>
      </changeMoveSelector>
      <changeMoveSelector>
        <entitySelector>
          <entityClass>com.example.SourceOrSink</entityClass>
        </entitySelector>
      </changeMoveSelector>
      <changeMoveSelector>
        <cacheType>PHASE</cacheType>
        <selectionOrder>SHUFFLED</selectionOrder>
      </changeMoveSelector>
      <tailChainSwapMoveSelector>
        <entitySelector>
          <entityClass>com.example.SourceOrSink</entityClass>
        </entitySelector>
        <valueSelector variableName="previous"/>
      </tailChainSwapMoveSelector>
      <subChainChangeMoveSelector>
        <entityClass>com.example.SourceOrSink</entityClass>
        <subChainSelector>
          <valueSelector variableName="previous"/>
        </subChainSelector>
        <valueSelector variableName="previous"/>
        <selectReversingMoveToo>true</selectReversingMoveToo>
      </subChainChangeMoveSelector>
      <subChainSwapMoveSelector>
        <entityClass>com.example.SourceOrSink</entityClass>
        <subChainSelector>
          <valueSelector variableName="previous"/>
        </subChainSelector>
        <secondarySubChainSelector>
          <valueSelector variableName="previous"/>
        </secondarySubChainSelector>
        <selectReversingMoveToo>true</selectReversingMoveToo>
      </subChainSwapMoveSelector>
      <subChainSwapMoveSelector>
        <entityClass>com.example.SourceOrSink</entityClass>
        <subChainSelector>
          <valueSelector variableName="previous"/>
          <maximumSubChainSize>1</maximumSubChainSize>
        </subChainSelector>
        <secondarySubChainSelector>
          <valueSelector variableName="previous"/>
          <maximumSubChainSize>1</maximumSubChainSize>
        </secondarySubChainSelector>
        <selectReversingMoveToo>true</selectReversingMoveToo>
      </subChainSwapMoveSelector>
    </unionMoveSelector>
    <acceptor>
      <lateAcceptanceSize>4096</lateAcceptanceSize>
    </acceptor>
    <forager>
      <acceptedCountLimit>32</acceptedCountLimit>
    </forager>
  </localSearch>

  <!-- Optimization algorithms configuration -->
  <termination>
    <bestScoreFeasible>true</bestScoreFeasible>
    <minutesSpentLimit>13</minutesSpentLimit>
    <unimprovedSecondsSpentLimit>33</unimprovedSecondsSpentLimit>
  </termination>

</solver>
