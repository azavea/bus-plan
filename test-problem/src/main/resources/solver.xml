<?xml version="1.0" encoding="UTF-8"?>
<solver>
  <environmentMode>FULL_ASSERT</environmentMode>

  <constructionHeuristic>
    <queuedEntityPlacer>
      <entitySelector id="placerEntitySelector0">
        <entityClass>com.example.Student</entityClass>
        <cacheType>PHASE</cacheType>
        <selectionOrder>SHUFFLED</selectionOrder>
      </entitySelector>
      <changeMoveSelector>
        <entitySelector mimicSelectorRef="placerEntitySelector0"/>
        <valueSelector>
          <cacheType>PHASE</cacheType>
          <selectionOrder>SHUFFLED</selectionOrder>
        </valueSelector>
      </changeMoveSelector>
    </queuedEntityPlacer>
  </constructionHeuristic>

  <constructionHeuristic>
    <queuedEntityPlacer>
      <entitySelector id="placerEntitySelector1">
        <entityClass>com.example.SourceOrSink</entityClass>
        <cacheType>PHASE</cacheType>
        <selectionOrder>SHUFFLED</selectionOrder>
      </entitySelector>
      <changeMoveSelector>
        <entitySelector mimicSelectorRef="placerEntitySelector1"/>
        <valueSelector>
          <cacheType>PHASE</cacheType>
          <selectionOrder>SHUFFLED</selectionOrder>
        </valueSelector>
      </changeMoveSelector>
    </queuedEntityPlacer>
  </constructionHeuristic>
  
  <!-- Domain model configuration -->
  <scanAnnotatedClasses>
    <packageInclude>com.example</packageInclude>
  </scanAnnotatedClasses>

  <!-- Score configuration -->
  <scoreDirectorFactory>
    <scoreDrl>busRules.drl</scoreDrl>
  </scoreDirectorFactory>

  <!-- Local search -->
  <localSearch>
    <unionMoveSelector>
      <changeMoveSelector>
        <entitySelector id="entitySelector0">
          <entityClass>com.example.Student</entityClass>
        </entitySelector>
        <valueSelector>
          <nearbySelection>
            <originEntitySelector mimicSelectorRef="entitySelector0"/>
            <nearbyDistanceMeterClass>com.example.StudentStopDistanceMeter</nearbyDistanceMeterClass>
            <parabolicDistributionSizeMaximum>1</parabolicDistributionSizeMaximum>
          </nearbySelection>
        </valueSelector>
      </changeMoveSelector>
      <changeMoveSelector>
        <entitySelector id="entitySelector1">
          <entityClass>com.example.SourceOrSink</entityClass>
        </entitySelector>
        <valueSelector>
          <nearbySelection>
            <originEntitySelector mimicSelectorRef="entitySelector1"/>
            <nearbyDistanceMeterClass>com.example.SoSoADistanceMeter</nearbyDistanceMeterClass>
            <parabolicDistributionSizeMaximum>30</parabolicDistributionSizeMaximum>
          </nearbySelection>
        </valueSelector>
      </changeMoveSelector>
      <changeMoveSelector>
        <cacheType>PHASE</cacheType>
        <selectionOrder>SHUFFLED</selectionOrder>
      </changeMoveSelector>
      <tailChainSwapMoveSelector>
        <entitySelector id="entitySelector2">
          <entityClass>com.example.SourceOrSink</entityClass>
        </entitySelector>
        <valueSelector variableName="previous"/>
      </tailChainSwapMoveSelector>
      <subChainChangeMoveSelector>
        <entityClass>com.example.SourceOrSink</entityClass>
        <subChainSelector>
          <valueSelector variableName="previous"/>
        </subChainSelector>
        <valueSelector variableName="previous"/>
        <selectReversingMoveToo>true</selectReversingMoveToo>
      </subChainChangeMoveSelector>
      <subChainSwapMoveSelector>
        <entityClass>com.example.SourceOrSink</entityClass>
        <subChainSelector>
          <valueSelector variableName="previous"/>
        </subChainSelector>
        <secondarySubChainSelector>
          <valueSelector variableName="previous"/>
        </secondarySubChainSelector>
        <selectReversingMoveToo>true</selectReversingMoveToo>
      </subChainSwapMoveSelector>
    </unionMoveSelector>
    <acceptor>
      <lateAcceptanceSize>1024</lateAcceptanceSize>
    </acceptor>
    <forager>
      <acceptedCountLimit>16</acceptedCountLimit>
    </forager>
  </localSearch>

  <!-- Optimization algorithms configuration -->
  <termination>
    <!-- <bestScoreFeasible>true</bestScoreFeasible> -->
    <minutesSpentLimit>10</minutesSpentLimit>
    <unimprovedSecondsSpentLimit>60</unimprovedSecondsSpentLimit>
  </termination>

</solver>
