<?xml version="1.0" encoding="UTF-8"?>
<solver>
  <environmentMode>FULL_ASSERT</environmentMode>
  <!-- <environmentMode>NON_REPRODUCIBLE</environmentMode> -->
 
  <!-- Domain model configuration -->
  <scanAnnotatedClasses>
    <packageInclude>com.azavea</packageInclude>
  </scanAnnotatedClasses>

  <!-- Score configuration -->
  <scoreDirectorFactory>
    <scoreDrl>busRules.drl</scoreDrl>
  </scoreDirectorFactory>

  <!-- Local search -->
  <localSearch>
    <unionMoveSelector>
      <changeMoveSelector>
        <entitySelector id="entitySelector0">
          <entityClass>com.azavea.Student</entityClass>
        </entitySelector>
        <valueSelector>
          <nearbySelection>
            <originEntitySelector mimicSelectorRef="entitySelector0"/>
            <nearbyDistanceMeterClass>com.azavea.StudentStopDistanceMeter</nearbyDistanceMeterClass>
            <parabolicDistributionSizeMaximum>10</parabolicDistributionSizeMaximum>
          </nearbySelection>
        </valueSelector>
      </changeMoveSelector>
      <changeMoveSelector>
        <entitySelector id="entitySelector1">
          <entityClass>com.azavea.SourceOrSink</entityClass>
        </entitySelector>
        <valueSelector>
          <nearbySelection>
            <originEntitySelector mimicSelectorRef="entitySelector1"/>
            <nearbyDistanceMeterClass>com.azavea.SoSoADistanceMeter</nearbyDistanceMeterClass>
            <parabolicDistributionSizeMaximum>30</parabolicDistributionSizeMaximum>
          </nearbySelection>
        </valueSelector>
      </changeMoveSelector>
      <changeMoveSelector>
        <cacheType>PHASE</cacheType>
        <selectionOrder>SHUFFLED</selectionOrder>
      </changeMoveSelector>
      <tailChainSwapMoveSelector>
        <entitySelector id="entitySelector2">
          <entityClass>com.azavea.SourceOrSink</entityClass>
        </entitySelector>
        <valueSelector variableName="previous"/>
      </tailChainSwapMoveSelector>
      <subChainChangeMoveSelector>
        <entityClass>com.azavea.SourceOrSink</entityClass>
        <subChainSelector>
          <valueSelector variableName="previous"/>
        </subChainSelector>
        <valueSelector variableName="previous"/>
        <selectReversingMoveToo>true</selectReversingMoveToo>
      </subChainChangeMoveSelector>
      <subChainSwapMoveSelector>
        <entityClass>com.azavea.SourceOrSink</entityClass>
        <subChainSelector>
          <valueSelector variableName="previous"/>
        </subChainSelector>
        <secondarySubChainSelector>
          <valueSelector variableName="previous"/>
        </secondarySubChainSelector>
        <selectReversingMoveToo>true</selectReversingMoveToo>
      </subChainSwapMoveSelector>
    </unionMoveSelector>
    <acceptor>
      <lateAcceptanceSize>1024</lateAcceptanceSize>
    </acceptor>
    <forager>
      <acceptedCountLimit>16</acceptedCountLimit>
    </forager>
  </localSearch>

  <!-- Optimization algorithms configuration -->
  <termination>
    <!-- <bestScoreFeasible>true</bestScoreFeasible> -->
    <minutesSpentLimit>10</minutesSpentLimit>
    <unimprovedSecondsSpentLimit>60</unimprovedSecondsSpentLimit>
  </termination>

</solver>
